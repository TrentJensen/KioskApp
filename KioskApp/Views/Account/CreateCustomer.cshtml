@model Customer

<h2>Please add the following information.  All fields are optional.</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip"></label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="Loyalty " class="form-check-input">
                <label class="form-check-label" asp-for="Loyalty">Sign up for the free rewards program</label>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <input type="hidden" name="Id" value="@Model.Id" />
            <label asp-for="FirstName"></label>
            <label asp-for="LastName"></label>
        </div>
    </div>
    </div>
